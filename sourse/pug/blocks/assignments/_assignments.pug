mixin assignments_top()
	+b.assignment-line--headers
		+b.main-content--headers 
			+e.description-and-name
				+e.headers-wrap
					+icon('three')
					+e.P.header Запросы
			+e.date-name-status
				+e.date 
					+e.headers-wrap
						+icon('three')
						+e.header-plan 
							+e.header Крайний срок 
							+e.plan План
				+e.fio-status
					+e.fio 
						+e.headers-wrap
							+icon('three')
							+e.header Автор
					+e.status--header 
						+icon('three')
						+e.header Статус
			+e.tags
				+e.header Тэги

mixin assignments_tabs()
	+b.assignments-tabs
		+active_closed_tabs()
		+incoming_sent_tabs()


mixin active_closed_tabs()
	+b.tabs 
		+e.BUTTON.tab--assignment(tabindex="1")
			+e.P.text Все
		+e.BUTTON.tab--assignment(tabindex="1") 
			+e.P.text Закрытые
		+e.BUTTON.tab--assignment.active(tabindex="1") 
			+e.P.text Активные

mixin incoming_sent_tabs()
	+b.tabs 
		+e.BUTTON.tab--assignment.active(tabindex="1")
			+e.P.text Входящие
		+e.BUTTON.tab--assignment(tabindex="1") 
			+e.P.text Исходящие

