mixin assignment_ready(change)
	+b.assignment-status--ready 
		p Готов
		if change=='allowed'
			+e.BUTTON.open.clean-btn
				+icon('status')

mixin assignment_closed(change)
	+b.assignment-status--closed
		p Закрыт
		if change=='allowed'
			+e.BUTTON.open.clean-btn
				+icon('status')

mixin assignment_opened(change)
	+b.assignment-status--opened
		p Открыт
		if change=='allowed'
			+e.BUTTON.open.clean-btn
				+icon('status')

mixin assignment_in-process(change)
	+b.assignment-status--in-process
		p В работе
		if change=='allowed'
			+e.BUTTON.open.clean-btn
				+icon('status')

mixin assignment_tag(name)
	+b.assignment-tag
		p=name
		+e.BUTTON.close.clean-btn
			+icon('close-cross')

mixin assignment_add()
	+b.BUTTON.assignment-add
		+icon('plus')

mixin assignment_more(number)
	+b.assignment-tag
		p=`Еще ${number}`

mixin filter_chip(filter)
	+b.filter-chip
		+e.P.filter-name=filter
		+e.BUTTON.delete.btn 
			+icon("close-cross")